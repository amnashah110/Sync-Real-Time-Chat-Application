html
  head
    title Sync.
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/styles.css')
    link(rel='icon', href='/assets/icon.png', type='image/x-icon')
    script(src='/script.js')

  body
    .container
      .left-column
        h1 Sync.
        .typewriter
          h2 Stay in Sync, Stay Connected
      .right-column
        h2 Login To Your Account
        form(action=registration ? '/register' : '/', method='post').center
          div
            h4.left Username
            input(type='text', name='username')
          div
            h4.left Password
            div.password-container
            span
              input(type='password', name='password', id='passwordEnter')
              img(src='/assets/eye.png', id='togglePasswordEnter', alt='Show Password', class='eye-icon')
            if !registration
            span
              h3.right Forgot Password?
              // Flash messages
              if messages && messages.error.length > 0
                .flash-messages(style= 'color: red;')
                  each msg in messages.error
                    p.error-message= msg
          div
          if registration
            h4.left Confirm Password
            div.password-container
            span
              input(type='password', name='confirmPassword', id='confirmPassword')
              img(src='/assets/eye.png', id='togglePasswordConfirm', alt='Show Password', class='eye-icon')
            button(type='submit') Register
            h3(id='toggleForms').center Already Have An Account? Login Here
          else
            button(type='submit') Log In
            h3(id='toggleForms').center Don't Have An Account? Register Here
            h5.center OR
        form(action='/auth/github', method='get').center
          .login.center
            button(type='submit')
              img(src='/assets/github.png', alt='GitHub', class='icon' style='width: 30px; height: 30px; margin-right: 6%;')
              | Sign In With Github
